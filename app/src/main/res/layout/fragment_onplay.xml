<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefae9"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FragmentOnPlay" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Bingo Nomadas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TableRow
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/text_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Empezar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/number"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/spacing_last_winners"
                android:text="Ultimos..."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/last_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/last_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/last_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/last_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/last_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="74"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff0000"
                android:textSize="40sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/events"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:paddingLeft="5dp" >

        </ListView>
    </TableRow>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_button"
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

            <TextView
                android:id="@+id/TextView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:textSize="@dimen/size_text_button"/>

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:textSize="@dimen/size_text_button"/>

            <ImageView
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/spacing_button"
                android:layout_marginTop="2dp"
                android:background="@drawable/number"
                android:src="@android:drawable/ic_menu_send"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_button"
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="5"
                android:textAppearance="?android:attr/textAppearanceLarge"
               
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:textSize="@dimen/size_text_button"/>

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="6"
                android:textAppearance="?android:attr/textAppearanceLarge"
                
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:textSize="@dimen/size_text_button" />

            <ImageView
                android:id="@+id/del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/spacing_button"
                android:layout_marginTop="2dp"
                android:background="@drawable/number"
                android:src="@android:drawable/ic_delete"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="9"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/size_text_button" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                
                android:layout_marginRight="@dimen/spacing_button"
                android:background="@drawable/number"
                android:textSize="@dimen/size_text_button" />

        </TableRow>

    </LinearLayout>

</LinearLayout>
